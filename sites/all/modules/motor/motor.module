  if ($form_id == 'owner_node_form') {
    $form['#attached']['js'][] = drupal_get_path('module', 'motor') . '/js/embed-entity-autonodetitle.js';
  }

  if ($form_id == 'drug_node_form') {
    
    if (isset($_GET['type'])) {
      $type = $_GET['type'];
      $term = taxonomy_get_term_by_name($type);
      $term = reset($term);
